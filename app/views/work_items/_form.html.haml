= form_for(@work_item) do |f|
  - if @work_item.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@work_item.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @work_item.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :date
    %br
    = f.date_select :date
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :note
    %br
    = f.text_area :note

  .actions
    = f.submit
